<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link href="{{ asset('css/index.css') }}" type="text/css" rel="stylesheet" />
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    {% endblock %}
</head>
<body>
{% autoescape "html" %}
{% block body %}
    <div id="row1">
    <h1 id="h1">HOTEL RECOMMENDER</h1>
    <div>
        {{ form_start(form) }}
    <div class="my-custom-class-for-errors">
        {{ form_errors(form) }}
    </div>

    <div class="row" >
    <div class="col">
        {{ form_row(form.trip_type) }}
    </div>
    <div class="col" id="some-custom-id">
        {{ form_row(form.name) }}
    </div>
    <div class="col" id="some-custom-id">
        {{ form_row(form.city) }}
    </div>
    <div class="col" id="some-custom-id">
        {{ form_row(form.start_date) }}
    </div>
    <div class="col" id="some-custom-id">
        {{ form_row(form.end_date) }}
    </div>
    </div>
    <div class="row">
        <div class="col" id="some-custom-id"> <p>Stars</p>
            {{ form_row(form.1, {'label': '☆'}) }}
            {{ form_row(form.2, {'label': '☆☆'}) }}
            {{ form_row(form.3, {'label': '☆☆☆'}) }}
            {{ form_row(form.4, {'label': '☆☆☆☆'}) }}
            {{ form_row(form.5, {'label': '☆☆☆☆☆'}) }}
        </div>
        <div class="col" id="some-custom-id"><p>Rating</p>
            {{ form_row(form.Min_Value) }}
            {{ form_row(form.Max_Value) }}
        </div>
    </div>
    <div class="row">
        <div class="col"> <p>Rooms</p>
        </div>
        <div class="col" id="some-custom-id">
            {{ form_row(form.adult_1) }}
        </div>
        <div class="col" id="some-custom-id">
            {{ form_row(form.child_1) }}
        </div>
        <div class="col" id="some-custom-id">
            {{ form_row(form.child_ages_1) }}
        </div>
    </div>
    <div class="row">
        <div class="col"> <p></p>
        </div>
        <div class="col" id="adult2">
            {{ form_row(form.adult_2) }}
        </div>
        <div class="col" id="some-custom-id">
            {{ form_row(form.child_2) }}
        </div>
        <div class="col" id="some-custom-id">
            {{ form_row(form.child_ages_2) }}
        </div>
    </div>
    <div class="row">
        <div class="col" id="some-custom-id" >
            {{ form_row(form.send) }}
        </div>
    </div>
    </div>
    {{ form_end(form) }}
    </div>
{% endblock %}
{% endautoescape %}
{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="{{ asset('js/index.js') }}"></script>
{% endblock %}
</body>
</html>

